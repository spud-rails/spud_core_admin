<%= error_messages_for(f.object) %>

<fieldset>
  <legend>User Details</legend>

<div class="form-group">
  <%=f.label :login, :required=>true,:class=> "control-label col-sm-4"%>
  <div class="col-sm-8">
    <%=f.text_field :login,:title => "",:size=>25, :class => "form-control"%>
    <p class="help-block">This is the username used to login to the account.</p>
  </div>
  
</div>
<div class="form-group">
  <%=f.label :email,:class=> "control-label col-sm-4"%>
  <div class="col-sm-8">
    <%=f.text_field :email, :title => "",:size => 25, :class => "form-control"%>
    <p class="help-block">The email address must be a valid email address.</p>
  </div>
  
</div>
<div class="form-group">
  <%=f.label :first_name,:class=> "control-label col-sm-4"%>
  <div class="col-sm-8">
    <%=f.text_field :first_name, :title => "",:size => 25, :class => "form-control"%>
  </div>
  
</div>
<div class="form-group">
  <%=f.label :last_name,:class=> "control-label col-sm-4"%>
  <div class="col-sm-8">
    <%=f.text_field :last_name, :title => "",:size => 25, :class => "form-control"%>
  </div>
  
</div>
<div class="form-group">
  <%=f.label :time_zone,:class => "control-label col-sm-4"%>
  <div class="col-sm-8">
    <%=f.time_zone_select :time_zone,ActiveSupport::TimeZone.us_zones,{:default => Rails.application.config.time_zone}, {:class => "form-control"}%>
  </div>
</div>

</fieldset>
<fieldset>
  <legend>Credentials</legend>

<div class="form-group">
  <%=f.label :password,:class=> "control-label col-sm-4"%>
  <div class="col-sm-8">
    <%=f.password_field :password, :title => "",:size => 25, :class => "form-control"%>
    <p class="help-block">Password must be at least 8 characters</p>
  </div>
  
</div>
<div class="form-group">
  <%=f.label :password_confirmation,"Confirm",:class=> "control-label col-sm-4"%>
  <div class="col-sm-8">
    <%=f.password_field :password_confirmation, :title => "",:size => 25, :class => "form-control"%>
    <p class="help-block">Retype your password here.</p>
  </div>
  
</div>
<div class="form-group">
  <%=f.label :super_admin,"Super Admin",:class=> "control-label col-sm-4"%>
  <div class="col-sm-8">
    <label class="checkbox inline">
    <%=f.check_box :super_admin, :title => ""%>
    The super administrator bypasses all permissions.
  </label>
  </div>
</div>

</fieldset>
<fieldset>
  <legend>Permissions</legend>
        <div class="form-group">
        <label class="control-label col-sm-4">Access Control</label>
    <div class="col-sm-8">
    <%=f.fields_for :spud_admin_permissions do |builder|%>

      <%=builder.hidden_field :name%>
      <label class="checkbox inline">
      
        <%=builder.check_box :access%><%=builder.object.name%>&nbsp;&nbsp;
    </label>
    
    <%end%>
    </div>
      </div>
</fieldset>
